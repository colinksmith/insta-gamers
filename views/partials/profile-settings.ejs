<form class="container-fluid" action="/post/createPost" enctype="multipart/form-data" method="POST">
    <div class="mb-3 row">
        <label for="name" class="form-label col-sm-2 text-sm-end">Name</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="name" name="name">
        </div>
    </div>
    <div class="mb-3 row">
        <label for="email" class="form-label col-sm-2 text-sm-end">Email</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="email" name="email">
        </div>
    </div>
    <div class="mb-3 row">
        <label for="bio" class="form-label col-sm-2 text-sm-end">Bio</label>
        <div class="col-sm-10">
            <textarea type="text" class="form-control" id="bio" name="bio"></textarea>
        </div>
    </div>

    <div class="mb-3 row">
        <label for="profileUpload" class="form-label col-sm-2 text-sm-end">Profile Image</label>
        <div class="col-sm-10">
            <input type="file" class="form-control" id="profileUpload" name="file">
        </div>
    </div>
    <div class="row">
        <button type="submit" class="btn btn-primary col-sm-10 offset-sm-1" value="Upload">Update profile info</button>

    </div>
    
    </form>
