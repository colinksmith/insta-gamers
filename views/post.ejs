<%- include('partials/header') -%>
<div class="container-fluid">
  <div class="row justify-content-center mt-5">
    <%- include('partials/sidebar') -%>
    <div class="col-10 offset-2">
      <img class="img-fluid" src="<%= post.image%>" />
      <div class="row text-center mt-3">
        <form
          class="col-2"
          action="/post/likePost/<%= post.id %>?_method=PUT"
          method="POST"
        >
          <button class="btn btn-primary fa fa-heart" type="submit"></button>
        </form>
        <h3 class="col-8">Likes: <%= post.likes %></h3>
        <%if(user && post.user == user.id){ %>
        <form
          action="/post/deletePost/<%= post.id %>?_method=DELETE"
          method="POST"
          class="col-2"
        >
          <button class="btn btn-primary fa fa-trash" type="submit"></button>
        </form>
        <%}%>
      </div>
      <div class="mt-3 commentContainer pb-5">
        <div class="col-12 row py-2">
          <img class="col rounded-circle px-0 mx-3" src="<%= originalPoster.picLink%>">
          <div class="col-10 d-flex gap-2 align-items-center">
            <a href="/profile/<%= originalPoster.id%>"><strong><%= originalPoster.userName%></strong></a>
            <%if(user && originalPoster.id !== user.id) {%>
              <span> - </span>
              <form class="" action="/profile/follow/<%= originalPoster.id %>?_method=POST" method="POST">
              <button class="btn btn-primary fa fa-heart" type="submit"> Follow</button>
            </form>
            <% } else if (!user) { %>
              <span> - </span>
              <form class="" action="/index<%= originalPoster.id %>?_method=GET" method="POST">
              <button class="btn btn-primary fa fa-heart" type="submit"> Follow</button>
            <% } %>

          </div>

        </div>
        <div class="border border-secondary px-3 py-3 rounded">
          <h2 class="mt-3 mb-3"><%= post.title %></h2>
          <div class="row align-items-center">
            <img class="col-2 rounded-circle px-0 mx-3" src="<%= originalPoster.picLink%>">
            <a class="col-auto py-3" href="/profile/<%= originalPoster.id %>"><%= originalPoster.userName%></a>
            <p class="col mb-0 px-0"><%= post.caption %></p>
          </div>
          <ul class="px-0">
            <% for(var i=0; i<comments.length; i++) {%>
              <li class="row align-items-center">
                <img class="col-2 rounded-circle px-0 mx-3" src="<%= comments[i].user.picLink%>">
                <a class="col-auto py-3" href="/profile/<%= comments[i].user.id %>"><%= comments[i].user.userName%></a>
                <p class="col mb-0 px-0"><%= comments[i].content %></p>
              </li>
            <% } %>
          </ul>
          <div class="mt-5">
            <form class="row align-items-center" action="/post/createComment/<%= post.id %>" method="POST">
              <div class="col-10 mb-3">
                <textarea class="form-control" id="content" name="content" placeholder="Add a comment..."></textarea>
              </div>
              <button type="submit" class="col-2 h-75 btn btn-primary" value="Upload">Comment</button>
            </form>
          </div>
        </div>
        <div class="col-6 mt-5">
          <%if(user){ %>
            <a class="btn btn-primary" href="/profile">Return to Profile</a>
          <% } %>
          <a class="btn btn-primary" href="/feed">Return to Feed</a>
        </div>
      </div>

    </div>
  </div>
</div>

<%- include('partials/footer') -%>
